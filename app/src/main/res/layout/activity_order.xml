<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".CurrentActivity">

    <ListView
            android:layout_width="244dp"
            android:layout_height="149dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:id="@+id/pizza_list"/>
    <Button
            android:text="@string/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/currorder_bt"
            app:layout_constraintStart_toStartOf="@+id/total"
            app:layout_constraintEnd_toEndOf="@+id/total"
            app:layout_constraintTop_toBottomOf="@+id/total" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.52"/>

    <EditText
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints="subtotal"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:minHeight="48dp"
        android:text="@string/subtotal"
        app:layout_constraintEnd_toEndOf="@+id/pizza_list"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/pizza_list"
        app:layout_constraintTop_toBottomOf="@+id/pizza_list"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints="tax"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:minHeight="48dp"
        android:text="@string/tax"
        app:layout_constraintEnd_toEndOf="@+id/subtotal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/subtotal"
        app:layout_constraintTop_toBottomOf="@+id/subtotal"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="total"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="@string/total"
        app:layout_constraintEnd_toEndOf="@+id/tax"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tax"
        app:layout_constraintTop_toBottomOf="@+id/tax"
        tools:ignore="LabelFor,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:autofillHints="phoneNumber"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:minHeight="48dp"
        android:text="@string/phoneNumber"
        app:layout_constraintBottom_toTopOf="@+id/pizza_list"
        app:layout_constraintEnd_toEndOf="@+id/pizza_list"
        app:layout_constraintStart_toStartOf="@+id/pizza_list"
        tools:ignore="LabelFor,TextFields" />
</androidx.constraintlayout.widget.ConstraintLayout>