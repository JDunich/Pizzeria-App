            android:id="@+id/phone" tools:layout_editor_absoluteY="232dp"
            tools:layout_editor_absoluteX="83dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/finalize" tools:layout_editor_absoluteY="301dp"
