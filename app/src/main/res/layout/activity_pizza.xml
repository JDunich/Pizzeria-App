<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PizzaActivity">

    <TextView
            android:id="@+id/Title2"
            android:layout_width="345dp"
            android:layout_height="66dp"
            android:text="@string/pick"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.076"
            tools:text="@string/pick" app:layout_constraintHorizontal_bias="0.495"/>

    <Button
            android:id="@+id/pep_bt"
            android:layout_width="118dp"
            android:layout_height="43dp"
            android:layout_marginTop="52dp"
            android:text="@string/pepperoni"
            app:layout_constraintStart_toStartOf="@+id/Title2"
            app:layout_constraintTop_toBottomOf="@+id/Title2"
            tools:text="@string/pepperoni" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
    <Button
            android:id="@+id/haw_bt"
            android:layout_width="103dp"
            android:layout_height="41dp"
            android:text="@string/hawaiian"
            app:layout_constraintTop_toBottomOf="@+id/Title2"
            tools:text="@string/hawaiian"
            android:layout_marginTop="52dp" app:layout_constraintStart_toEndOf="@+id/pep_bt"
            app:layout_constraintEnd_toStartOf="@+id/del_bt" app:layout_constraintHorizontal_bias="0.407"/>
    <Button
            android:id="@+id/del_bt"
            android:layout_width="87dp"
            android:layout_height="44dp"
            android:text="@string/deluxe"
            tools:text="@string/deluxe"
            app:layout_constraintTop_toBottomOf="@+id/Title2"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="@+id/Title2" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/del_bt" app:layout_constraintStart_toStartOf="@+id/pep_bt"
            app:layout_constraintTop_toBottomOf="@+id/Title2" android:layout_marginTop="180dp"
            app:autoSizeTextType="none"/>
    <Button
            android:text="@string/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/small"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:clickable="false"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="24dp"/>
    <Button
            android:text="@string/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/medium"
            app:layout_constraintStart_toEndOf="@+id/small" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" android:clickable="false"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="24dp"/>
    <Button
            android:text="@string/large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/large"
            app:layout_constraintStart_toEndOf="@+id/medium" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:clickable="false"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.507"/>
    <ListView
            android:layout_width="154dp"
            android:layout_height="195dp"
            android:id="@+id/extraToppings" app:layout_constraintTop_toBottomOf="@+id/large"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <ListView
            android:layout_width="116dp"
            android:layout_height="194dp"
            android:id="@+id/currentToppings" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/small" android:layout_marginLeft="48dp"
            android:layout_marginTop="20dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add"
            app:layout_constraintTop_toBottomOf="@+id/currentToppings"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/next"
            app:layout_constraintTop_toBottomOf="@+id/extraToppings"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>