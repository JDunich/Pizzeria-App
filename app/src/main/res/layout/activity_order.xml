<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ListView
            android:layout_width="244dp"
            android:layout_height="149dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:id="@+id/pizza_list"/>
    <Button
            android:text="@string/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/currorder_bt"
            app:layout_constraintStart_toStartOf="@+id/total"
            app:layout_constraintEnd_toEndOf="@+id/total"
            app:layout_constraintTop_toBottomOf="@+id/total" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.52"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/subtotal"
            android:ems="10"
            android:id="@+id/subtotal"
            app:layout_constraintTop_toBottomOf="@+id/pizza_list"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="@+id/pizza_list"
            app:layout_constraintEnd_toEndOf="@+id/pizza_list" android:clickable="false"
            android:autofillHints="subtotal" tools:ignore="LabelFor" android:minHeight="48dp" android:editable="false"
            app:layout_constraintHorizontal_bias="0.529"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/tax"
            android:ems="10"
            android:id="@+id/tax"
            app:layout_constraintStart_toStartOf="@+id/subtotal"
            app:layout_constraintEnd_toEndOf="@+id/subtotal"
            app:layout_constraintTop_toBottomOf="@+id/subtotal" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="1.0" android:autofillHints="tax" tools:ignore="LabelFor"
            android:minHeight="48dp" android:editable="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/total"
            android:ems="10"
            android:id="@+id/total"
            app:layout_constraintTop_toBottomOf="@+id/tax"
            app:layout_constraintStart_toStartOf="@+id/tax"
            app:layout_constraintEnd_toEndOf="@+id/tax" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="20dp" android:autofillHints="total" tools:ignore="LabelFor,TouchTargetSizeCheck"
            android:editable="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/phoneNumber"
            android:ems="10"
            android:id="@+id/phoneNumber"
            app:layout_constraintBottom_toTopOf="@+id/pizza_list" app:layout_constraintEnd_toEndOf="@+id/pizza_list"
            app:layout_constraintStart_toStartOf="@+id/pizza_list" android:layout_marginBottom="40dp"
            android:autofillHints="phoneNumber" tools:ignore="LabelFor,TextFields" android:editable="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>